- @page_title = "User:#{@user.nickname}"
%h2= @page_title

.user-profile.rounded-box
  .contents
    %dl
      %dt Nickname
      %dd= @user.nickname
    %dl
      %dt Fullname
      %dd= @user.fullname
    %dl
      %dt Email
      %dd= @user.email
    %dl
      %dt Joined at
      %dd= @user.created_at.strftime('%Y-%m-%d %H:%M')

%h3 Posted snippets
- @snippets = @user.snippets
!= partial :snippets_list
