!= partial :header
%h2= "Snippet #{@snippet.id}"
:javascript
  $(prettyPrint);
.snippet
  %dl
    %dt Title
    %dd= @snippet.title

    %dt Author
    %dd
      %a{:href => path_to("/user/#{@snippet.user.nickname}") }= @snippet.user.nickname

    %dt Comment
    %dd= @snippet.comment

    %dt Created at
    %dd= @snippet.created_at

    %dt Last modified at
    %dd= @snippet.updated_at
  %pre{:class => "prettyprint lang-#{@snippet.type}"}= @snippet.text
